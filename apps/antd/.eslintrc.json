{
  "extends": ["plugin:@nrwl/nx/react", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "indent": [
    "error",
    2,
    {
      "VariableDeclarator": {
        "var": 2,
        "let": 2,
        "const": 3
      },
      "MemberExpression": 1,
      "FunctionDeclaration": {
        "body": 1,
        "parameters": 1
      },
      "SwitchCase": 1,
      "ArrayExpression": 1,
      "ObjectExpression": 1,
      "ImportDeclaration": 1,
      "ignoreComments": true
    }
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
